<?xml version="1.0" encoding="UTF-8"?>

<!--
  EXAMPLE: A valid configuration that periodically sets metadata via a script
  -->

<ezstream>
    <url>http://localhost:8000/stream</url>
    <sourcepassword>hackme</sourcepassword>
    <format>MP3</format>
    <filename>stdin</filename>

    <svrinfoname>Great Station</svrinfoname>
    <svrinfourl>http://greatstation.net</svrinfourl>
    <svrinfogenre>Great Genre</svrinfogenre>
    <svrinfodescription>playing great music all the time</svrinfodescription>
    <svrinfobitrate>192</svrinfobitrate>
    <svrinfochannels>2</svrinfochannels>
    <svrinfosamplerate>48000</svrinfosamplerate>
  
    <metadata_progname>./meta.sh</metadata_progname>
    <metadata_format>@s@</metadata_format>
    <metadata_refreshinterval>5</metadata_refreshinterval>
</ezstream>
